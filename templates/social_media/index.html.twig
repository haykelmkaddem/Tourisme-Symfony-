{% extends 'base.html.twig' %}

{% block title %}SocialMedia index{% endblock %}

{% block body %}
    <h1>SocialMedia index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Facebook</th>
                <th>Linkedin</th>
                <th>Instagram</th>
                <th>Website</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for social_media in social_media %}
            <tr>
                <td>{{ social_media.id }}</td>
                <td>{{ social_media.facebook }}</td>
                <td>{{ social_media.linkedin }}</td>
                <td>{{ social_media.instagram }}</td>
                <td>{{ social_media.website }}</td>
                <td>
                    <a href="{{ path('social_media_show', {'id': social_media.id}) }}">show</a>
                    <a href="{{ path('social_media_edit', {'id': social_media.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('social_media_new') }}">Create new</a>
{% endblock %}
