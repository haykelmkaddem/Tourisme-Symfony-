<form method="post" action="{{ path('artiste_delete', {'id': artiste.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ artiste.id) }}">
    <br>
    <button class="btn btn-danger" style="margin-left: 77%; width: 78px;">Delete</button>
</form>
